services:
  - type: web
    name: megatron-backend
    env: node
    buildCommand: npm install
    startCommand: node server.js
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 10000
      - key: MONGODB_URI
        value: your_mongodb_connection_string
      - key: JWT_SECRET
        generateValue: true
      - key: FRONTEND_URL
        value: https://megatron.kisohub.com